{
  "name": "neoniousnode",
  "productName": "Neonious Node",
  "version": "1.2.0",
  "description": "Neonious mining and simulation software",
  "author": "Neonious GmbH",
  "license": "MIT",
  "scripts": {
    "clean": "rm -Rf dist",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always",
    "start": "export DEBUG=1 || set DEBUG=1&& electron app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neonious/Neonious-Node.git"
  },
  "build": {
    "appId": "com.neonious.node",
    "mac": {
      "category": "public.app-category.medical",
      "icon": "setup/app-icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "setup/app-icon.png",
      "certificateFile": "../code.pfx",
      "certificateSubjectName": "CN=Neonious GmbH, O=Neonious GmbH, L=Dï¿½sseldorf, S=Nordrhein-Westfalen, C=DE"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true,
      "differentialPackage": true
    },
    "extraResources": [
      "frontend",
      "engine"
    ]
  },
  "devDependencies": {
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^2.3.5",
    "electron-updater": "^4.3.9"
  }
}
